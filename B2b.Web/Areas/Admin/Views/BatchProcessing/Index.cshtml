@using System.Web
@using B2b.Web.v4.Models.Helper


@section cStyleLibrary{
    @Styles.Render("~/Scripts/Admin/vendor/animsition/css/animsition.css")
    @Styles.Render("~/Scripts/Admin/vendor/magnific-popup/magnific-popup.css")
    @Styles.Render("~/Content/fine-uploader/fine-uploader-new.css")
}

<div class="page page-campaign">
    <div class="pageheader">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="/Admin"><i class="fa fa-home"></i> Eryaz</a>
                </li>
                <li>
                    <a href="/Admin/Campaign">Toplu Koşul Girişi</a>
                </li>
            </ul>
        </div>
    </div>

    <!-- page content -->
    <div class="pagecontent" ng-controller="PictureImportController">
        <div class="row">
            <!-- col -->
            <div class="col-sm-12">
                <!-- tile -->
                <section class="tile">
                    <!-- tile header -->
                    <div class="tile-header bg-blue dvd dvd-btm">
                        <h1 class="custom-font"><strong></strong>Toplu Resim Girişi</h1>
                    </div>
                    <!-- /tile header -->
                    <!-- tile widget -->
                    <div class="tile-widget hidden">
                        <div class="form-horizontal p-0">
                            <div class="row">

                                <div class="col-sm-12">
                                    <div class="row">
                                        <div class="col-sm-9">
                                            <div class="row">
                                                <div class="col-sm-9">
                                                    <div class="form-group">
                                                        <div class="col-xs-12">
                                                            <div class="col-md-7">
                                                                <label class="btn btn-default btn-block">
                                                                    <input id="rule-excel-selector" type="file" style="display: none;" accept="application/vnd.openxmlformats-officedocument.spreadsheetml.sheet">
                                                                    <i class="fa fa-folder-open-o fa-fw"></i> Gözat
                                                                </label>
                                                            </div>
                                                            <div class="col-md-5">
                                                                <button class="btn btn-block btn-warning btn-rounded" ng-click="uploadExcelFile()">
                                                                    <span class="hidden-sm">Yükle</span> <i class="fa fa-search visible-sm"></i>
                                                                </button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div class="col-sm-3">
                                                    <button class="btn btn-block btn-success btn-rounded" ng-click="saveRuleExcel()">
                                                        <span class="hidden-sm">Kaydet</span> <i class="fa fa-search visible-sm"></i>
                                                    </button>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-sm-3">
                                            <button class="btn btn-block btn-primary btn-rounded" ng-click="dowlandFile()">
                                                <span class="hidden-sm">Örnek Dosya indir</span> <i class="fa fa-search visible-sm"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /tile widget -->

                    <hr class="m-0" />

                    <!-- tile body -->
                    <div class="tile-body p-10">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="row form-horizontal">
                                    <div class="col-sm-12">
                                        <div class="panel panel-blue panel-filled1">
                                            <div class="panel-heading">
                                                <h3 class="panel-title">Resim Listesi</h3>
                                            </div>

                                            <div class="panel-body p-5">
                                                <div class="col-md-12">
                                                    <div class="warranty-form-row">
                                                        <div class="warranty-form-column warranty-form-column-heading">
                                                            <label> Dosya Seçimi</label>
                                                            <span class="separator">:</span>
                                                            <label> Filigran</label>
                                                            <span class="separator">:</span>
                                                            <input type="text" ng-keypress="reloadImageArea();" ng-model="txtwatermark" />
                                                        </div>

                                                        <div class="warranty-form-column warranty-form-column-content">
                                                            <div id="fine-uploader-manual-trigger"></div>
                                                        </div>
                                                    </div>

                                                    <script type="text/template" id="qq-template-manual-trigger">
                                                        <div class="qq-uploader-selector qq-uploader uploaderClass" qq-drop-area-text="Dosyaları Sürükle Bırak">
                                                            <div class="qq-total-progress-bar-container-selector qq-total-progress-bar-container">
                                                                <div role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" class="qq-total-progress-bar-selector qq-progress-bar qq-total-progress-bar"></div>
                                                            </div>

                                                            <div class="qq-upload-drop-area-selector qq-upload-drop-area" qq-hide-dropzone>
                                                                <span class="qq-upload-drop-area-text-selector"></span>
                                                            </div>

                                                            <div class="buttons">
                                                                <div class="qq-upload-button-selector qq-upload-button">
                                                                    <div>Dosya Açınız</div>
                                                                </div>

                                                                <button type="button" id="trigger-upload" class="btn btn-primary">
                                                                    <i class="icon-upload icon-white"></i>Yüklemeyi Başlat
                                                                </button>
                                                            </div>

                                                            <span class="qq-drop-processing-selector qq-drop-processing">
                                                                <span>Processing dropped files...</span>
                                                                <span class="qq-drop-processing-spinner-selector qq-drop-processing-spinner"></span>
                                                            </span>

                                                            <ul class="qq-upload-list-selector qq-upload-list" aria-live="polite" aria-relevant="additions removals">
                                                                <li>
                                                                    <div class="qq-progress-bar-container-selector">
                                                                        <div role="progressbar" aria-valuenow="0" aria-valuemin="0" aria-valuemax="100" class="qq-progress-bar-selector qq-progress-bar"></div>
                                                                    </div>
                                                                    <span class="qq-upload-spinner-selector qq-upload-spinner"></span>
                                                                    <img class="qq-thumbnail-selector" qq-max-size="100" qq-server-scale>
                                                                    <span class="qq-upload-file-selector qq-upload-file"></span>
                                                                    <span class="qq-edit-filename-icon-selector qq-edit-filename-icon" aria-label="Edit filename"></span>
                                                                    @*<input class="qq-edit-filename-selector qq-edit-filename" tabindex="0" type="text">*@
                                                                    <span class="qq-upload-size-selector qq-upload-size"></span>
                                                                    <button type="button" class="qq-btn qq-upload-cancel-selector qq-upload-cancel">İptal</button>
                                                                    <button type="button" class="qq-btn qq-upload-retry-selector qq-upload-retry">Tekrar Dene</button>
                                                                    <button type="button" class="qq-btn qq-upload-delete-selector qq-upload-delete">Sil</button>
                                                                    <span role="status" class="qq-upload-status-text-selector qq-upload-status-text"></span>
                                                                </li>
                                                            </ul>

                                                            <dialog class="qq-alert-dialog-selector">
                                                                <div class="qq-dialog-message-selector"></div>

                                                                <div class="qq-dialog-buttons">
                                                                    <button type="button" class="qq-cancel-button-selector">Kapat</button>
                                                                </div>
                                                            </dialog>

                                                            <dialog class="qq-confirm-dialog-selector">
                                                                <div class="qq-dialog-message-selector"></div>

                                                                <div class="qq-dialog-buttons">
                                                                    <button type="button" class="qq-cancel-button-selector">Evet</button>
                                                                    <button type="button" class="qq-ok-button-selector">Hayır</button>
                                                                </div>
                                                            </dialog>

                                                            <dialog class="qq-prompt-dialog-selector">
                                                                <div class="qq-dialog-message-selector"></div>

                                                                <input type="text" />

                                                                <div class="qq-dialog-buttons">
                                                                    <button type="button" class="qq-cancel-button-selector">İptal</button>
                                                                    <button type="button" class="qq-ok-button-selector">Onay</button>
                                                                </div>
                                                            </dialog>
                                                        </div>
                                                    </script>
                                                </div>


                                            </div>
                                        </div>
                                    </div>


                                </div>
                            </div>
                        </div>
                        <!-- /tile body -->
                </section>
                <!-- /tile -->
                <!-- /col -->
            </div>
            <!-- /row -->
        </div>
    </div>

</div>

@section cScriptLibrary{
    @*@Scripts.Render("~/Scripts/Admin/vendor/typeahead/typeahead.bundle.min.js")*@
    @Scripts.Render("~/Content/fine-uploader/jquery.fine-uploader.js")
    @Scripts.Render("~/Scripts/Admin/vendor/animsition/js/jquery.animsition.js")
    @Scripts.Render("~/Scripts/Admin/vendor/screenfull/screenfull.js")
    @Scripts.Render("~/Scripts/Admin/vendor/magnific-popup/jquery.magnific-popup.js")
    @Scripts.Render("~/Scripts/Admin/vendor/mixitup/jquery.mixitup.js")
}




@section cScriptCode{


    <script src="@Url.ContentVersioned("/Scripts/Admin/pictureImport.js", HttpContext.Current.Request)"></script>
}
