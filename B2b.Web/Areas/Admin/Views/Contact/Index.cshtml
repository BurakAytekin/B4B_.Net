@using System.Web
@using B2b.Web.v4.Models.Helper
@{
    ViewBag.Title = "İletişim Bilgileri";
}

@section cStyleLibrary{}

@section cStyleCode{}

<div class="page page-contact">
    <div class="pageheader">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="/Admin"><i class="fa fa-home"></i> Eryaz</a>
                </li>
                <li>
                    <a href="/Admin/Contact">İletişim Bilgileri</a>
                </li>
            </ul>
        </div>
    </div>

    <!-- page content -->
    <div class="pagecontent">
        <div class="row"  ng-controller="contactController">
            <!-- col -->
            <div class="col-sm-12">
                <!-- tile -->
                <section class="tile">
                    <!-- tile header -->
                    <div class="tile-header bg-blue dvd dvd-btm">
                        <h1 class="custom-font"><strong>İletişim </strong>Bilgileri</h1>
                        <ul class="controls">
                            <li role="presentation"><a ng-click="newAddress()" aria-expanded="true"><span class="glyphicon glyphicon-plus mr-5"></span> Yeni</a></li>
                        </ul>
                    </div>
                    <!-- /tile header -->
                    <!-- tile body -->
                    <div class="tile-body p-10">
                        <div class="row form-horizontal">
                            <div class="col-sm-12">
                                <div>
                                    <div class="form-group text-center">
                                        <div class="col-xs-12" >
                                            <div class="btn-group btn-group-sm" data-toggle="buttons">
                                                <label class="btn btn-primary" ng-click="selectAdress(contact)" ng-repeat="contact in contactList">
                                                    <input type="radio" name="options" id="rb1"  autocomplete="off" /> {{contact.AddressTitle}}
                                                </label>

                                            </div>
                                        </div>
                                    </div>

                                    <hr class="line-dashed line-full" />

                                    <div class="form-group">
                                        <label for="input01" class="col-sm-2 control-label">Adres Başlığı</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" ng-model="contactItem.AddressTitle"  onkeypress="return fireMaxLenghtControl(this)" data-max-lenght="255">
                                        </div>
                                    </div>

                                    <hr class="line-dashed line-full" />

                                    <div ng-show="image_source!=''" class="form-group">
                                        <label for="imgPreview" class="col-sm-2 control-label">Önizleme</label>
                                        <div class="col-sm-10 text-center">
                                            <img id="imgPreview" ng-src="{{image_source}}" ng-if="!emptyImage" style="max-width:400px" />
                                            <img id="imgPreview" src="~/Content/images/logo_eryaz.png" ng-if="emptyImage" style="max-width:400px" />
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="iFileImage" class="col-sm-2 control-label">Dosya Yükle</label>
                                        <div class="col-sm-10">
                                            <input type="file" id="iFileImage" ng-model="myfile" base-sixty-four-input onchange="angular.element(this).scope().setFile(this)" accept="image/*" data-buttonText="Görsel Yükle" data-iconName="fa fa-image" class="filestyle" />
                                        </div>
                                    </div>

                                    <hr class="line-dashed line-full" />

                                    <div class="form-group">
                                        <label for="input01" class="col-sm-2 control-label">Firma Adı</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" ng-model="contactItem.Title"  onkeypress="return fireMaxLenghtControl(this)" data-max-lenght="100">
                                        </div>
                                    </div>

                                    <hr class="line-dashed line-full" />

                                    <div class="form-group">
                                        <label for="input01" class="col-sm-2 control-label">Telefon</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" ng-model="contactItem.Phone1"  onkeypress="return fireMaxLenghtControl(this)" data-max-lenght="20">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="input01" class="col-sm-2 control-label">Telefon</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" ng-model="contactItem.Phone2"  onkeypress="return fireMaxLenghtControl(this)" data-max-lenght="20">
                                        </div>
                                    </div>

                                    <hr class="line-dashed line-full" />

                                    <div class="form-group">
                                        <label for="input01" class="col-sm-2 control-label">Faks</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" ng-model="contactItem.Fax"  onkeypress="return fireMaxLenghtControl(this)" data-max-lenght="20">
                                        </div>
                                    </div>

                                    <hr class="line-dashed line-full" />

                                    <div class="form-group">
                                        <label for="input01" class="col-sm-2 control-label">İnternet Adresi</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" ng-model="contactItem.WebSite"  onkeypress="return fireMaxLenghtControl(this)" data-max-lenght="100">
                                        </div>
                                    </div>

                                    <hr class="line-dashed line-full" />

                                    <div class="form-group">
                                        <label for="input01" class="col-sm-2 control-label">E-Posta Adresi</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" ng-model="contactItem.Email1"  onkeypress="return fireMaxLenghtControl(this)" data-max-lenght="100">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="input01" class="col-sm-2 control-label">E-Posta Adresi</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" ng-model="contactItem.Email2"  onkeypress="return fireMaxLenghtControl(this)" data-max-lenght="100">
                                        </div>
                                    </div>
                                    <div class="form-group">
                                        <label for="input01" class="col-sm-2 control-label">Başlık</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" ng-model="contactItem.Title"  onkeypress="return fireMaxLenghtControl(this)" data-max-lenght="100">
                                        </div>
                                    </div>

                                    <hr class="line-dashed line-full" />

                                    <div class="form-group">
                                        <label for="input01" class="col-sm-2 control-label">Adres</label>
                                        <div class="col-sm-10">
                                            <textarea type="text" class="form-control" ng-model="contactItem.Address"  onkeypress="return fireMaxLenghtControl(this)" data-max-lenght="1000"></textarea>
                                        </div>
                                    </div>

                                    <hr class="line-dashed line-full" />

                                    <div class="form-group">
                                        <label for="input01" class="col-sm-2 control-label">Vergi Dairesi</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" ng-model="contactItem.TaxOffice" onkeypress="return fireMaxLenghtControl(this)" data-max-lenght="100">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="input01" class="col-sm-2 control-label">Vergi No</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" ng-model="contactItem.TaxNumber" onkeypress="return fireMaxLenghtControl(this)" data-max-lenght="100">
                                        </div>
                                    </div>

                                    <div class="form-group">
                                        <label for="input01" class="col-sm-2 control-label">Mersis No</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" ng-model="contactItem.MersisNo" onkeypress="return fireMaxLenghtControl(this)" data-max-lenght="100">
                                        </div>
                                    </div>

                                    <hr class="line-dashed line-full" />

                                    <div class="form-group">
                                        <label for="input01" class="col-sm-2 control-label">Lokasyon</label>
                                        <div class="col-sm-10">
                                            <input type="text" class="form-control" ng-change="locationChange(location)" ng-model="location" onkeypress="return fireMaxLenghtControl(this)" data-max-lenght="100">
                                        </div>
                                    </div>

                                    <div ng-show="location!=''" class="form-group">
                                        <label for="input01" class="col-sm-2 control-label">Önizleme</label>
                                        <div id="divPreview" class="col-sm-10"></div>
                                    </div>

                                    <div class="form-group text-right">
                                        <div class="col-xs-12">
                                            <button type="button" class="btn btn-success" ng-click="saveContact()"><i class="fa fa-edit"></i> Güncelle</button>
                                            <button type="button" class="btn btn-danger" ng-click="deleteContact()"> <i class="fa fa-remove"></i> Sil</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- /tile body -->
                </section>
                <!-- /tile -->
                <!-- /col -->
            </div>
            <!-- /row -->
        </div>
    </div>
</div>

@section cScriptLibrary{
    @Scripts.Render("~/Scripts/Admin/vendor/filestyle/bootstrap-filestyle.min.js")
}

@section cScriptCode{


<script src="@Url.ContentVersioned("/Scripts/Admin/contact.js", HttpContext.Current.Request)"></script>
   
}