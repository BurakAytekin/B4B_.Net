
@{
    ViewBag.Title = "Definition";
}

@section cScriptLibrary{

    <link rel="stylesheet" href="~/Scripts/Admin/vendor/chosen/chosen.css">
}



<div class="page page-currency" ng-controller="authorityDefinitionController">
    <div class="pageheader">
        <div class="page-bar">
            <ul class="page-breadcrumb">
                <li>
                    <a href="#"><i class="fa fa-home"></i> Eryaz</a>
                </li>
                <li>
                    <a href="#">Yetkiler</a>
                </li>
                <li>
                    <a href="#">Yetki Tanımları</a>
                </li>
            </ul>
        </div>
    </div>

    <!-- page content -->
    <div class="pagecontent">
        <div class="row">
            <!-- col -->
            <div class="col-sm-12 col-md-8" ng-if="!detailDisable">
                <!-- tile -->
                <div class="tile">
                    <!-- tile header -->
                    <div class="tile-header bg-blue dvd dvd-btm">
                        <h1 class="custom-font"><strong>Yetki </strong>Tanımları</h1>
                        <ul class="controls">
                            <li role="presentation"><a ng-click="openModal('Add',null)" aria-expanded="true"><i class="fa fa-plus"></i> <strong>Yeni</strong></a></li>
                        </ul>
                    </div>
                    <!-- /tile header -->
                    <!-- tile body -->
                    <div class="tile-body p-10">
                        <div class="row">
                            <div class="col-sm-12">
                                <table class="table table-bordered">
                                    <thead>
                                        <tr>
                                            <th class="text-center">Adı</th>
                                            <th class="text-center">Sil</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr ng-repeat="row in definiitionGroupList ">
                                            <td class="text-center">{{row.Name}}</td>
                                            <td class="text-center">
                                                <button class="btn btn-default btn-rounded btn-ef btn-ef-5 btn-ef-5b mb-10" ng-click="showDetail(row)"><i class="fa fa-check"></i> <span>Seç</span></button>
                                                <button class="btn btn-default btn-rounded btn-ef btn-ef-5 btn-ef-5b mb-10" ng-click="openModal('Edit', row)"><i class="fa fa-edit"></i> <span>Düzenle</span></button>
                                                <button class="btn btn-danger btn-rounded btn-ef btn-ef-5 btn-ef-5b mb-10" ng-click="deleteDefinition(false, row)"><i class="fa fa-trash"></i> <span>Sil</span></button>
                                        </tr>
                                    </tbody>
                                </table>

                            </div>

                        </div>
                    </div>

                    <!-- /tile body -->
                    <!-- /tile -->
                    <!-- /col -->
                </div>
                <!-- /row -->
            </div>


            <div class="col-sm-12 col-md-8" ng-if="detailDisable">
                <div class="tile">
                    <!-- tile header -->
                    <div class="tile-header bg-blue dvd dvd-btm">
                        <h1 class="custom-font"><strong>Yetki </strong>Tanımları</h1>
                        <ul class="controls">
                            <li role="presentation"><a ng-click="saveAuthorityDefinition()" aria-expanded="true"><i class="fa fa-plus"></i> <strong>Kaydet</strong></a></li>
                            <li role="presentation"><a ng-click="cancelList()" aria-expanded="true"><i class="fa fa-plus"></i> <strong>Geri</strong></a></li>
                        </ul>
                    </div>
                    <!-- /tile header -->
                    <!-- tile body -->
                    <div class="tile-body p-10">
                        <div class="row">
                            <div class="col-sm-12">
                                <div class="form-group">
                                    <label for="input01" class="col-sm-2 control-label">Yetki Tipi</label>
                                    <div class="col-sm-10">
                                        <select data-placeholder="Grup Seçiniz" multiple="" tabindex="3" class="chosen-select chosenGroup" style="width: 90%;">
                                            <option value="{{row.Id}}" ng-repeat="row in groupHeaderList" on-finish-render="ngRepeatGroupFinished">{{row.Name}}</option>
                                        </select>
                                    </div>
                                </div>
                                </br>
                                <div class="form-group">
                                    <label for="input01" class="col-sm-2 control-label">Kullanıcı</label>
                                    <div class="col-sm-10">
                                        <select data-placeholder="Kullanıcı Seçiniz" multiple="" tabindex="3" class="chosen-select chosenUser" style="width: 90%;">
                                            <option value="{{row.Id}}" ng-repeat="row in salesmanList">{{row.Name}}</option>
                                        </select>
                                    </div>
                                </div>


                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
        <!--MODAL CURRENCY-->
        <div id="modal-definition" class="modal fade" tabindex="-1" role="dialog" aria-labelledby="classInfo" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h3 class="modal-title custom-font"><strong>Yetki Tanımı - {{addMode === true ? 'Yeni Ekle' : 'Düzenle'}}</strong></h3>
                    </div>
                    <div class="modal-body">

                        <form class="form-horizontal" role="form">


                            <div class="form-group">
                                <label class="col-sm-3"><strong>Grup Adı</strong></label>
                                <div class="col-sm-9">
                                    <input class="form-control" ng-model="selectedDefinitionGroup.Name" id="message" placeholder="Değer Yazınız..." />
                                </div>
                            </div>
                        </form>

                    </div>
                    <div class="modal-footer">
                        <button class="btn btn-success btn-ef btn-ef-3 btn-ef-3c" ng-click="addOrUpdate()">
                            {{addMode === true ? 'Kaydet' : 'Güncelle'}}<i class="fa fa-arrow-right"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>


    </div>
</div>

@section cScriptCode{
    @Scripts.Render("~/Scripts/Admin/authorityDefinition.js")
    @Scripts.Render("~/Scripts/Admin/vendor/chosen/chosen.jquery.min.js")


}
