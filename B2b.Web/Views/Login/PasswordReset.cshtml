@using B2b.Web.v4.Models.EntityLayer
@model B2b.Web.v4.Models.EntityLayer.PasswordResetCs

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Şifre Resetle1</title>

    <link href="~/Content/css/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
    <!------ Include the above in your HEAD tag ---------->
    <style type="text/css">
        .login-form {
            margin-top: 60px;
            color: #5d5d5d;
            background: #f2f2f2;
            padding: 26px;
            border-radius: 10px;
            -moz-border-radius: 10px;
            -webkit-border-radius: 10px;
        }


        * {
            -webkit-box-sizing: border-box;
            -moz-box-sizing: border-box;
            box-sizing: border-box;
            outline: none;
        }

        .form-control {
            position: relative;
            font-size: 16px;
            height: auto;
            padding: 10px;
        }

        body {
            background: url(../../Content/images/reset-pass-bg.jpg) no-repeat center center fixed;
            -webkit-background-size: cover;
            -moz-background-size: cover;
            -o-background-size: cover;
            background-size: cover;
        }

        .login-form {
            margin-top: 60px;
        }

        form[role=login] {
            color: #5d5d5d;
            background: #f2f2f2;
            padding: 26px;
            border-radius: 10px;
            -moz-border-radius: 10px;
            -webkit-border-radius: 10px;
        }

            form[role=login] img {
                display: block;
                margin: 0 auto;
                margin-bottom: 35px;
            }

            form[role=login] input,
            form[role=login] button {
                font-size: 18px;
                margin: 16px 0;
            }

            form[role=login] > div {
                text-align: center;
            }

        .form-links {
            text-align: center;
            margin-top: 1em;
            margin-bottom: 50px;
        }

            .form-links a {
                color: #fff;
            }

        .reset-pass-head {
            padding: 40px 0;
            text-align: center;
        }

            .reset-pass-head h1 {
                margin: 0;
                color: #ffffff;
                font-weight: bold;
                font-size: 27px;
            }
    </style>
</head>
<body>
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="container">
            <div class="col-md-12 reset-pass-head">
                <div class="row">
                    <h1>Lütfen şifre resetleme işleminizi gerçekleştiriniz.</h1>
                </div>
            </div>
            <div class="row" id="pwd-container">
                <div class="col-md-4"></div>
                <div class="col-md-4">
                    <section class="login-form">
                        <form method="post" action="#" role="login">
                            <div class="col-md-12" style="padding-bottom:10px;">
                                <div class="row">
                                    <img src="~/Content/images/logo.png" class="img-responsive" style="margin: 0 auto;" alt="" />
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="exampleInputEmail1">Şifre</label>
                                @*<input type="password" class="form-control" name="passwordUser" id="password" placeholder="Şifre">*@
                                @Html.PasswordFor(model => model.Password, new { title = "Parola", placeholder = "Parola", @class = "form-control" })


                            </div>
                            <div class="form-group">
                                <label for="exampleInputPassword1">Şifre Tekrar</label>
                                @Html.PasswordFor(model => model.PasswordRepeat, new { title = "Parola", placeholder = "Parola", @class = "form-control" })
                                @*<input type="password" class="form-control" name="passwordUserRepeat" id="password" placeholder="Şifre Tekrar">*@
                            </div>
                            @if (TempData["Alert"] == "true")
                            {
                                <div class="alert alert-danger">@Html.ValidationSummary(false, "")</div>
                            }


                            <div class="pwstrength_viewport_progress"></div>

                            <button type="submit" class="btn btn-primary">Resetle</button>
                            <div style="float:left;padding-right:10px;">

                                <a class="btn btn-info" href="/Login/Logout">Vazgeç</a>
                            </div>

                        </form>
                    </section>
                </div>

                <div class="col-md-4"></div>
            </div>
        </div>
    }
</body>
</html>
