<style>
    .radioBtn .notActive {
        color: #3276b1;
        background-color: #fff;
    }

    .priceDisable {
        text-decoration: line-through;
    }

    table {
        background-color: white;
    }

    .input-group {
        margin-bottom: 0px !important;
    }


    .vertical-text {
        -ms-writing-mode: tb-rl;
        writing-mode: tb-rl;
        -moz-transform: rotate(0deg);
        -ms-transform: rotate(0deg);
        -o-transform: rotate(0deg);
        -webkit-transform: rotate(0deg);
        transform: rotate(0deg);
        white-space: nowrap;
        display: block;
        bottom: 0;
        width: 15px;
        font-size: 15px;
        position: relative;
        left: 3px;
        color: #444645;
        border-left: 2px solid;
        padding-left: 20px;
    }

        .vertical-text:after {
            content: '\f178';
            font: normal normal normal 14px/1 FontAwesome;
            position: relative;
            left: -3px;
            bottom: -6px;
        }

        .vertical-text:before {
            content: '\f178';
            font: normal normal normal 14px/1 FontAwesome;
            position: relative;
            left: -3px;
            top: -6px;
        }



    .campaign > td {
        background-color: #FFF176 !important;
    }

    .new-product > td {
        background-color: #A5D6A7 !important;
    }

    .coupon > td {
        background-color: #ffd699 !important;
    }

    .promotion > td {
        background-color: #cce6ff !important;
    }

    .fixed-price > td {
        background-color: #f2d9d9 !important;
    }

    .jconfirm-none-overflow .jconfirm-box,
    .jconfirm-none-overflow .jconfirm-box .jconfirm-content-pane {
        overflow: visible !important;
    }
</style>

