@using System.Web
@using B2b.Web.v4.Models.Helper

@{
    ViewBag.Title = "UnClosedInvoice";
}


<section ng-controller="UnClosedIncoiceController">

    <div id="breadcrumb-container">
        <div class="container">
            <ul class="breadcrumb">
                <li><a href="#">Finans</a></li>
                <li><a href="#">Kaptılmamış Faturalar</a></li>
            </ul>
        </div>
    </div>
    <div class="container">
        <div class="col-md-12 box">
            <div class="row">
                <div class="col-md-12">
                    <div class="row">
                        <div class="col-sm-12">

                            <div class="export-items">
                                <a href="#" ng-click="exportToExcel()" class="btn btn-custom-2 btn-md"><i class="fa fa-file-excel-o fa-lg" aria-hidden="true"></i> Excel'e Aktar</a>

                            </div>
                        </div>
                    </div>
                    <table id="pDataTable" class="table table-striped table-hover table-custom shadowed">

                        <thead>
                            <tr>

                                <th>Tarih</th>
                                <th>Vade Tarihi</th>
                                <th>Evrak No</th>
                                <th>İşlem Türü</th>
                                <th>Açıklama</th>
                                <th class="text-right">Borç</th>
                                <th class="text-right">Kapatılan</th>
                                <th class="text-right">Kalan</th>
                                <th class="text-right">Kalan Toplam</th>
                                <th class="text-right">Gün</th>
                            </tr>
                        </thead>
                        </thead>
                        <tbody class="context">
                            <tr ng-repeat="row in unClosedList">
                                <td class="text-center">{{row.Date | dateFilterErp | date:'dd.MM.yyyy'}}</td>
                                <td class="text-center">{{row.DueDate | dateFilterErp | date:'dd.MM.yyyy'}}</td>
                                <td class="text-center">{{row.DocumentNo}}</td>
                                <td class="text-center">{{row.TransactionType}}</td>
                                <td class="text-center">{{row.Explanation}}</td>
                                <td class="text-center" ng-bind-html="row.DebtStr"></td>
                                <td class="text-center" ng-bind-html="row.ClosedStr"></td>
                                <td class="text-center" ng-bind-html="row.RemainingStr"></td>
                                <td class="text-center" ng-bind-html="row.RemainingTotalStr"></td>
                                <td class="text-center" ng-bind-html="row.Day"></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>


    </div>

</section>




<script src="~/Scripts/Js/jszip.js" type="text/javascript"></script>
<script src="~/Scripts/Js/xlsx.full.min.js" type="text/javascript"></script>
<script src="~/Scripts/Js/FileSaver.js" type="text/javascript"></script>

<script src="@Url.ContentVersioned("/Scripts/Pages/unClosedInvoice.js", HttpContext.Current.Request)"></script>



